<Window x:Class="DataverseToolbox.ToolsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tools"
        Height="400"
        Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock x:Name="ConnectedToText" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="ConnectedUrlText" Foreground="Gray" Margin="0,6,0,0"/>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="20" Background="#FAFAFA">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Tools area placeholder" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Future Dataverse tools will appear here." Margin="0,8,0,0" Foreground="Gray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
