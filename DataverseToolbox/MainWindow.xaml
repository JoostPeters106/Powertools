<Window x:Class="DataverseToolbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dataverse Toolbox" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">
            <TextBlock Text="Saved Dataverse Connections" FontSize="24" FontWeight="SemiBold" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Add Connection"
                        Width="130"
                        Height="36"
                        Margin="0,0,8,0"
                        Click="AddConnection_Click"/>
                <Button Content="Connect Selected"
                        Width="130"
                        Height="36"
                        Click="ConnectSelected_Click"/>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="2" CornerRadius="8" BorderThickness="1" BorderBrush="#DDD">
            <ListBox x:Name="ConnectionsList"
                     BorderThickness="0"
                     MouseDoubleClick="ConnectionsList_MouseDoubleClick"
                     DisplayMemberPath="Name">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12" Margin="6" Background="#FAFAFA" CornerRadius="6">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{Binding Url}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>
